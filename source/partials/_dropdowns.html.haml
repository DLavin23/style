%h1 Dropdowns

%div(ng-controller="dropdownCtrl")
  .group.margin-bottom
    %strong Solo Caret

    .dropdown(data-dropdown)

      %button.btn.btn-boring.dropdown-toggle.dropdown-toggle-solo(type="button" data-dropdown-toggle)
        .caret

      %ul.dropdown-menu(role="menu")
        %li.dropdown-menu-item(role="presentation")
          %a(role="menuitem" href="#") Action
        %li.dropdown-menu-item(role="presentation")
          %a(role="menuitem" href="#") Another action
        %li.dropdown-menu-item(role="presentation")
          %a(role="menuitem" href="#") Something else here
        %li.dropdown-menu-item(role="presentation")
          %a(role="menuitem" href="#") Separated link

  .group.margin-bottom
    %strong Including Text

    .dropdown.grid-1-3(data-dropdown)

      %button.btn.btn-boring.dropdown-toggle.grid-1-1(type="button" data-dropdown-toggle)
        Dropdown
        .caret

      %ul.dropdown-menu(role="menu")
        %li.dropdown-menu-item(role="presentation")
          %a(role="menuitem" href="#") Action
        %li.dropdown-menu-item(role="presentation")
