%h1 Alerts

%h2 Banner Alerts

.sg-break

  .alert-banner.alert-success(role="alert")
    %strong.alert-signal Woot!
    This is a success message.

  .alert-banner.alert-warning(role="alert")
    %strong.alert-signal Warning!
    This is an warning message.
    %a.alert-action(href="#") Action

  .alert-banner.alert-default.alert-dismissible(role="alert")
    %button.i-close(type="button" aria-hidden="true") &times;
    %strong.alert-signal Hey there!
    This is a default Belly message.
    %a.alert-action(href="#") Action

  .alert-banner.alert-danger.alert-dismissible(role="alert")
    %button.i-close(type="button" aria-hidden="true") &times;
    %strong.alert-signal Alert!
    This is an danger message.
    Caution,
    = succeed "." do
      %a(href="#") I&#8217;m a link

%h2 Inline Alerts

.sg-break

  .alert-inline.alert-success(role="alert")
    %strong.alert-signal Woot!
    It&#8217;s a success!

  .alert-inline.alert-warning(role="alert")
    %strong.alert-signal Warning!
    Proceed with caution.

  .alert-inline.alert-default(role="alert")
    %strong.alert-signal Hey there!
    Lighthouses rule.

  .alert-inline.alert-danger(role="alert")
    %strong.alert-signal Oh no!
    There was an error.
    Caution,
    = succeed "." do
      %a(href="#") I&#8217;m a link
